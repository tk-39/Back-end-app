<!doctype html>
<html>
  <head>
    <p><a href="/">Home</a></p>
    <title>Register for <%=shopName%></title>
    <link rel="stylesheet"  type="text/css" href="main.css" />
  </head>
  <body>
    <h1>Register for <%=shopName%></h1>
    <form method="POST" action="/registered">
        <p>First name: <input id="first" type="text" name="first" value="" /></p>
        <p>Last name: <input id="last" type="text" name="last" value="" /></p>
        <p>Email: <input id="email" type="email" name="email" value="John@example.com" /></p>
        <p>Username: <input id="username" type="username" name="username" value="username" /></p>
        <p>Password: <input id="password" type="password" name="password" value="password" /></p>
        <input type="submit" value="Register" />
      </form>
  </body>
</html>